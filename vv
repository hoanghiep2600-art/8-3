<script>
function startEffects(e) {
  e.preventDefault();

  const icons = ["â¤ï¸","âœ¨","ðŸŒ¸","â­","ðŸŽ‰","ðŸ’Ž"];
  let count = 0;

  let interval = setInterval(() => {
    let item = document.createElement("div");
    item.className = "effect";

    item.innerHTML = icons[count % icons.length];

    item.style.left = Math.random() * window.innerWidth + "px";
    item.style.top = window.innerHeight + "px";
    item.style.fontSize = (20 + Math.random() * 30) + "px";

    item.style.animationDuration = (3 + Math.random() * 2) + "s";

    document.body.appendChild(item);

    setTimeout(() => {
      item.remove();
    }, 5000);

    count++;

    if (count > 60) {
      clearInterval(interval);
    }

  }, 150); // sá»‘ cÃ ng lá»›n cÃ ng xuáº¥t hiá»‡n cháº­m
}
